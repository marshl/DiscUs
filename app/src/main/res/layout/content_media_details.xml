<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_media_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marshl.discus.MediaDetailActivity"
    tools:showIn="@layout/activity_media_details">

    <TextView
        android:id="@+id/media_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="[Title Name]" />

    <TextView
        android:id="@+id/media_year_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/media_name_text_view"
        android:text="[Year]" />

    <TextView
        android:id="@+id/media_release_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/media_name_text_view"
        android:text="Released: " />

    <TextView
        android:id="@+id/media_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/media_release_label"
        android:layout_toEndOf="@+id/media_release_label"
        android:text="[ReleaseDate]" />

    <TextView
        android:id="@+id/media_content_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/media_release_date"
        android:layout_alignBottom="@+id/media_release_date"
        android:layout_alignParentEnd="true"
        android:text="[Content Rating]" />

    <TextView
        android:id="@+id/media_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/media_release_label"
        android:text="[Genre]" />

    <TextView
        android:id="@+id/media_plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/media_genre"
        android:text="[Full Plot]" />

    <TextView
        android:id="@+id/media_director_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/media_plot"
        android:text="Director: " />

    <TextView
        android:id="@+id/media_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/media_director_label"
        android:layout_toEndOf="@+id/media_director_label"
        android:text="[Director]" />

    <TextView
        android:id="@+id/media_writer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/media_director_label"
        android:text="Writers: " />

    <TextView
        android:id="@+id/media_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/media_writer_label"
        android:layout_toEndOf="@+id/media_writer_label"
        android:text="[Writier]" />

    <TextView
        android:id="@+id/media_metascore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/media_writer_label"
        android:background="@android:color/holo_green_light"
        android:padding="5dp"
        android:text="55" />

    <RatingBar
        android:id="@+id/media_imdb_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_writer_label"
        android:layout_toEndOf="@+id/media_genre"
        android:numStars="10"
        android:stepSize="0.5" />


    <Button
        android:id="@+id/media_button_library_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_imdb_rating"
        android:text="Add/Remove from Library" />

    <Button
        android:id="@+id/media_button_wishlist_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/media_button_library_toggle"
        android:text="Add/Remove to Wishlist" />


</RelativeLayout>
